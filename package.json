{
  "name": "claude-chrome-stream",
  "version": "1.0.0",
  "description": "High-performance Chrome automation plugin for Claude Code with real-time CDP streaming",
  "main": "dist/index.js",
  "bin": {
    "claude-chrome-stream": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/cli.ts",
    "mcp": "node dist/mcp-server.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "node --test dist/**/*.test.js 2>/dev/null || echo 'No tests found'",
    "test:integration": "tsx tests/integration.test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "chrome",
    "automation",
    "cdp",
    "puppeteer",
    "screencast",
    "streaming",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^23.0.0",
    "sharp": "^0.33.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/ws": "^8.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
